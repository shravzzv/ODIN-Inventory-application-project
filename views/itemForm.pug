extends layout

block content
  h1= title

  form(method="post")
    label(for="name") Name*:
    input#name(type="text", placeholder='Grand Theft Auto, etc.', name='name', minLength='3', maxLength=32, required, value=(item===undefined ? '': item.name)) 

    label(for="description") Description*:
    textarea#description(name="description", cols="30", rows="10", minLength='3', maxLength='500', required)= item===undefined ? '' : item.description

    label(for="price") Price*:
    input#price(type="number", name="price", min='1', max='10000', required, value=(item === undefined ? '': item.price))

    label(for="number_in_stock") Number in stock*:
    input#number_in_stock(type="number", name="number_in_stock", min='0', max='10000', required, value=(item === undefined ? '': item.number_in_stock))

    label Categories*:
    .categories
      for category in categories
        .category
          input(type="checkbox", name="category", id=category._id, value=category._id checked=category.checked)
          label(for=category._id) #{category.name}

    button(type="submit") Submit

  if errors
    .errors
      h2 Errors
      ol 
        for error in errors
          li!= error.msg